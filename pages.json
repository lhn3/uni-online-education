{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"app-plus":{
					"scrollIndicator":"none",//不显示滚动条
					"bounce":"none",		//关闭回弹
					"titleNView":{//自定义导航栏App、H5
						"type":"transparent",//
						"buttons":[//按钮
							{
								"fontSrc":"/static/icon/iconfont.ttf",
								"text":"\ue689",
								"fontSize":"26",
								"float": "right",
								"background":"rgba(0,0,0,0)"
							}
						],
						"searchInput":{//搜索
							"align":"center",
							"backgroundColor":"rgba(255,255,255,0.5)",
							"disabled":true,
							"placeholder":"请输入搜索内容",
							"placeholderColor":"rgba(255,255,255,0.8)",
							"borderRadius":"30rpx"
						}
					}
				}
			}
		}
		,{
			"path": "pages/category/category",
			"style": {
				"navigationBarTitleText": "分类"
			}
		}
		,{
			"path": "pages/article/article",
			"style": {
				"navigationBarTitleText": "阅读"
			}
		}
		,{
			"path": "pages/question/question",
			"style": {
				"navigationBarTitleText": "问答"
			}
		}
		,{
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "我的"
			}
		}
	],
	"globalStyle": {
		"navigationBarBackgroundColor": "#A2CD5A",
		"navigationBarTextStyle": "white",
		// "navigationBarTitleText": "uni-app",
		// "enablePullDownRefresh":true,
		"backgroundColor": "#6E8B3D"
	},
	"tabBar":{
		"color":"#8a8a8a",			// 未选中的颜色
		"selectedColor":"#A2CD5A",	// 选中的颜色
		"backgroundColor":"#FFFFFF",// 背景色
		// #ifndef MP
		"borderStyle":"#6E8B3D",	// 上边框
		"fontSize":"12px",
		"height":"48px",
		// #endif
		// 小程序中可以将tab栏设置成顶部
		// "position":"top",
		"list":[
			{
				"text":"首页",
				"pagePath":"pages/index/index",
				// 未选中的图标
				"iconPath":"static/tab/index.png",
				// 选中时的图标
				"selectedIconPath":"static/tab/index-active.png"
			},
			{
				"text":"分类",
				"pagePath":"pages/category/category",
				"iconPath":"static/tab/category.png",
				"selectedIconPath":"static/tab/category-active.png"
			},
			{
				"text":"阅读",
				"pagePath":"pages/article/article",
				"iconPath":"static/tab/article.png",
				"selectedIconPath":"static/tab/article-active.png"
			},
			{
				"text":"问答",
				"pagePath":"pages/question/question",
				"iconPath":"static/tab/question.png",
				"selectedIconPath":"static/tab/question-active.png"
			},
			{
				"text":"我的",
				"pagePath":"pages/my/my",
				"iconPath":"static/tab/my.png",
				"selectedIconPath":"static/tab/my-active.png"
			}
		]
	}
}
